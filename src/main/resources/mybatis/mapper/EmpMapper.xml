<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.qqcn.emp.mapper.EmpMapper">
    <!-- 查询员工列表数据 -->
    <select id="getEmpList" parameterType="cn.qqcn.emp.vo.EmpQuery" resultType="Emp">
        select * from emp
        <include refid="getEmpListWhere"></include>
        limit #{start}, #{limit}
    </select>
    <!-- 统计员工数据量 -->
    <select id="countEmpList" parameterType="cn.qqcn.emp.vo.EmpQuery" resultType="Long">
        select count(1) from emp
        <include refid="getEmpListWhere"></include>
    </select>
    
    <sql id="getEmpListWhere">
        <where>
            <if test="name != null">
                name like '%'#{name}'%'
            </if>
            <if test="startDate != null">
                <![CDATA[
                    and birthday >= #{startDate}
                ]]>
            </if>
            <if test="endDate != null">
                <![CDATA[
                    and birthday <= #{endDate}
                ]]>
            </if>
        </where>
    </sql>
</mapper>